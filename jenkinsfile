pipeline {
agent any
    stages {
        stage('Clone sources') {
            steps {
                git url: 'https://github.com/imkunalll/Manager.git'
            }
        }
        stage("Quality Gate"){
    timeout(time: 1, unit: 'HOURS') { 
    def qg = waitForQualityGate() 
    if (qg.status != 'OK') {
        error "Pipeline aborted due to quality gate failure: ${qg.status}"
    }
    }
    }
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        
        
        stage('Build') {
            steps {
                echo 'building'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
      
        stage('Release') {
            steps {
                echo 'Realeasing'
            }
        }
  }
  }
